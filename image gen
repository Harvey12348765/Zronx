<body>

<div class="app-card">
    <h1>HARVEY'S AI STUDIO</h1>
    
    <div class="input-group">
        <input type="text" id="p" placeholder="What are we imagining today?">
    </div>

    <div style="display: flex; gap: 10px;">
        <select id="s">
            <option value="">Default Style</option>
            <option value="Disney pixar 3d animation style">Disney</option>
            <option value="cinematic movie poster high detail">Movie Poster</option>
            <option value="photorealistic 8k highly detailed">Realistic</option>
            <option value="vibrant 2d cartoon">Cartoon</option>
            <option value="anime studio ghibli style">Anime</option>
            <option value="ultra fluffy soft fur volumetric lighting">Fluffy</option>
        </select>
        <select id="r">
            <option value="1:1">Square</option>
            <option value="16:9">Wide</option>
            <option value="9:16">Portrait</option>
        </select>
    </div>

    <button onclick="gen()">Generate</button>

    <div id="imageArea">
        <span style="color: #555;">Ready for your prompt...</span>
    </div>
    
    <button id="dl" class="dl-btn" onclick="save()">Download Image</button>
</div>

<script>
    let url = "";
    async function gen() {
        const p = document.getElementById('p').value;
        if(!p) return alert("Write something first!");
        
        const area = document.getElementById('imageArea');
        const dl = document.getElementById('dl');
        area.innerHTML = '<div class="loader"></div>';
        dl.style.display = "none";

        const [wR, hR] = document.getElementById('r').value.split(':').map(Number);
        const w = 1024;
        const h = Math.round((w / wR) * hR);
        const s = document.getElementById('s').value;
        
        const seed = Math.floor(Math.random() * 100000);
        url = `https://pollinations.ai/p/${encodeURIComponent(p + ", " + s)}?width=${w}&height=${h}&seed=${seed}&nologo=true`;

        const img = new Image();
        img.crossOrigin = "anonymous";
        img.src = url;
        img.onload = () => {
            area.innerHTML = '';
            area.appendChild(img);
            dl.style.display = "block";
        };
    }

    async function save() {
        const res = await fetch(url);
        const blob = await res.blob();
        const a = document.createElement('a');
        a.href = URL.createObjectURL(blob);
        a.download = "ai-generation.jpg";
        a.click();
    }
</script>

</body>
