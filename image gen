        .input-group { margin-bottom: 15px; }
        input, select, button { width: 100%; padding: 12px; border-radius: 10px; border: 1px solid #333; background: #252525; color: white; box-sizing: border-box; font-size: 1rem; }
        button { background: var(--accent); border: none; font-weight: bold; cursor: pointer; margin-top: 10px; transition: 0.2s; }
        button:hover { opacity: 0.9; transform: translateY(-1px); }
        #imageArea { margin-top: 25px; min-height: 300px; border: 2px dashed #333; border-radius: 15px; display: flex; align-items: center; justify-content: center; overflow: hidden; position: relative; }
        img { width: 100%; height: auto; display: block; }
